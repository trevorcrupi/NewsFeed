{% extends 'layout.twig' %}

{% block content %}

    <form action="/login/user" method="POST" style="width: 25%; margin: 0 auto; margin-top: 25%;">
      <legend>Login</legend>
      <input type="text" name="user_name" placeholder="Your User Name" />
      <input type="password" name="user_password" placeholder="Your Password" />
      <button type="submit" class="btn">Login</button>

      <br /><br />
      <a href="/register">No Account? Register Here.</a>
    </form>

{% endblock %}
